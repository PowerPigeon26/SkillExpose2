@model Skill

<h2>Create a New Skill</h2>

@using (Html.BeginForm("InsertSkillToDatabase", "Skill", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <div class="form-group">
        <label for="">Select a Game</label>
        <select class="form-control" name="Game" value="">
            @foreach (var game in Model.Games)
            {
                <option value="@game.Name">@game.GameID @game.Name</option>
            }
        </select>
    </div>

    <label asp-for="GameID" class="control-label">Input GameID shown above:</label>
    <input type="text" name="GameID" class="form-control" value="" />

    <label asp-for="Type" class="control-label">Type</label>
    <input type="text" name="Type" class="form-control" value="" />

    <label asp-for="InGameDescription" class="control-label">InGameDescription</label>
    <input type="text" name="InGameDescription" class="form-control" value="" />

    <label asp-for="AdditionalDescription" class="control-label">AdditionalDescription</label>
    <input type="text" name="AdditionalDescription" class="form-control" value="" />

    <label asp-for="Notes" class="control-label">Notes</label>
    <input type="text" name="Notes" class="form-control" value="" />

    <label asp-for="YTVideoName" class="control-label">YTVideoName</label>
    <input type="text" name="YTVideoName" class="form-control" value="" />

    <label asp-for="YTCode" class="control-label">YTCode</label>
    <input type="text" name="YTCode" class="form-control" value="" />

    <label asp-for="TSStart" class="control-label">TSStart</label>
    <input type="text" name="TSStart" class="form-control" value="" />

    <label asp-for="TSEnd" class="control-label">TSEnd</label>
    <input type="text" name="TSEnd" class="form-control" value="" />

    <input type="submit" value="Create Skill" class="btn btn-primary" />
}