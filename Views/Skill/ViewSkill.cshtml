@model Skill

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>Skill ID</th>
        <th>Name</th>
        <th>Game</th>
        <th>Description</th>
    </tr>
    <tr>
        <td>@Model.ID</td>
        <td>@Model.Name</td>
        <td>@Model.Game</td>
        <td>@Model.InGameDescription</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Skill/UpdateSkill/@Model.ID">UPDATE THIS SKILL</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteSkill", "Skill", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>